import random


class person:
    
    global people_present
    people_present = []
    
    def people_generator():
        
        people_names = ['James', 'Olivia', 'Daniel', 'Emma', 'Michael', 'Sophia', 'David', 'Ava', 'Matthew', 'Lily', 'Joshua', 'Grace', 'Andrew', 'Mia', 'Benjamin', 'Chloe', 'Samuel', 'Ella', 'Ryan', 'Zoe']
        
        people_ages = random.randint(1, 85)
        
        people_jobs = ['Merchant', 'Blacksmith', 'Baker', 'Scribe', 'Tanner', 'Mason', 'Herald', 'Shepard', 'Brewer', 'Carpenter', 'Miller', 'Cooper', 'Chandler', 'Fletcher']
        
        people_present.append(f"name: {random.choice(people_names)} | age: {people_ages} | occupation: {random.choice(people_jobs)}")
        
        print(f"{people_present} are now in the flock")
        print(f"The flock has grown to {len(people_present)} people")

